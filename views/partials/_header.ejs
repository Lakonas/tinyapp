<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
        <span class="navbar-text text-light ml-auto mr-2">
          Logged in as <strong><%= username %></strong>
        </span>
        <!-- Logout form goes here if needed (optional) -->
        <form method="POST" action="/logout" class="form-inline ml-auto">
          <input type="submit" value="Logout" class="btn btn-outline-light">
        </form>
      <% } else { %>
        <form method="POST" action="/login" class="form-inline ml-auto">
          <input type="text" name="username" placeholder="Username" required class="form-control mr-2">
          <input type="submit" value="Login" class="btn btn-outline-light">
        </form> 
      <% } %>
    </div>
  </nav>
</header>